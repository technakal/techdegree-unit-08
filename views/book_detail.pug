extends layout.pug

block content
  div.container
    div.header-page
      h3= title

      include errors

      if updated
        h4 Book updated!

    form(action=`/books/${book.id}` method="post")
      include form
      p
        a.button(href="/books/new") Create New Book

    form(method="post" action=`/books/${book.id}/delete` onsubmit=`return confirm("Do you really want to delete this book?")`)
      p
        a.button(href="/books") Home
      
      p
        input.danger(type="submit" value="Delete Book")