extends layout

block content
  h3 Books
  .search
  p
    a.button(href="/books/new") Create New Book
  if books
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`)= book.title
            td= book.author
            td= book.genre
            td= book.year
  else
    h4 Sorry! No books found in the catalogue.
  script(src="/static/scripts/script.js")